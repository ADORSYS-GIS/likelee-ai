# Supabase (PostgREST) service credentials
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Server
PORT=8787

# Supabase Storage buckets
SUPABASE_BUCKET_PRIVATE=likelee-private
SUPABASE_BUCKET_PUBLIC=likelee-public
SUPABASE_BUCKET_TEMP=likelee-temp

# Veriff API config (from Veriff Customer Portal -> Integrations)
VERIFF_BASE_URL=https://veriff.me.api
VERIFF_API_KEY=your-veriff-api-key
VERIFF_SHARED_SECRET=your-veriff-shared-secret

# AWS & Moderation
AWS_REGION=eu-central-1
# Provide credentials via env/profile/role for the server process:
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...

# Moderation (AWS Rekognition DetectModerationLabels)
MODERATION_ENABLED=1
# Optional: MIN CONF threshold is hardcoded to 60.0 in code (can make env-driven later)


# ElevenLabs (optional, for server-side TTS synthesis)
ELEVENLABS_API_KEY=

# Creatify (Personas/Avatars and Lipsyncs)
CREATIFY_BASE_URL=https://creatify.ai
CREATIFY_API_ID=
CREATIFY_API_KEY=
# Public URL exposed by your server to receive Creatify webhooks
CREATIFY_CALLBACK_URL=

# Tavus (legacy; remove when no longer needed)
TAVUS_API_KEY=your-tavus-api-key
TAVUS_BASE_URL=https://tavusapi.com
# Public URL exposed by your server to receive Tavus webhook callbacks
TAVUS_CALLBACK_URL=https://your-public-domain/webhooks/tavus
# Optional: if Tavus signs webhooks, set the shared secret here
TAVUS_WEBHOOK_SECRET=

# Stripe Connect (for payouts / bank connection)
PAYOUTS_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_CLIENT_ID=
STRIPE_RETURN_URL=https://your-frontend-domain/stripe/connect/return
STRIPE_REFRESH_URL=https://your-frontend-domain/stripe/connect/refresh
STRIPE_WEBHOOK_SECRET=

# Stripe Subscriptions (Agency billing)
STRIPE_AGENCY_PRICE_ID=
STRIPE_SCALE_PRICE_ID=
STRIPE_CHECKOUT_SUCCESS_URL=http://localhost:5173/agencysubscribe?success=1
STRIPE_CHECKOUT_CANCEL_URL=http://localhost:5173/agencysubscribe?canceled=1

DOCUSEAL_USER_EMAIL=leleivanlele22@gmail.com

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
