# Supabase (PostgREST) service credentials
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Server
PORT=8787

# Supabase Storage buckets
SUPABASE_BUCKET_PRIVATE=likelee-private
SUPABASE_BUCKET_PUBLIC=likelee-public
SUPABASE_BUCKET_TEMP=likelee-temp

# Veriff API config (from Veriff Customer Portal -> Integrations)
VERIFF_BASE_URL=https://veriff.me.api
VERIFF_API_KEY=your-veriff-api-key
VERIFF_SHARED_SECRET=your-veriff-shared-secret

# AWS & Moderation
AWS_REGION=eu-central-1
# Provide credentials via env/profile/role for the server process:
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...

# Moderation (AWS Rekognition DetectModerationLabels)
MODERATION_ENABLED=1
# Optional: MIN CONF threshold is hardcoded to 60.0 in code (can make env-driven later)


